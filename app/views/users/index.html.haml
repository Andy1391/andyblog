%p#notice= notice
%h1 Users
%table
  %thead
    %tr
      %th Name
      %th Email
      %th Role
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.role
        %td= link_to 'Show', user
        - if can? :update, user
          %td= link_to 'Edit', edit_user_path(user)
        - if can? :destroy, user
          %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
